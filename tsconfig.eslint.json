{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "strict": true
    },
    "typeRoots": [
        "jest",
        "**/node_modules/@types",
        "node_modules/**/*.d.ts",
    ],
    "lib": [
        "es5",
        "es6",
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "es2019",
        "dom"
    ],
    "include": [
        "tsconfig.json",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.test.ts",
        "node_modules/typescript/lib/lib.es2019.d.ts",
        "**/.eslintrc.js",
        "**/jest.setup.js",
        "**/jest.config.js",
        "**/wallaby.js",
        "**/tsconfig.json",
    ]
}